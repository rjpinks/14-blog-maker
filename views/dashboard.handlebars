{{!-- This is lacking a delete button --}}

<div>
    <h2>Welcome, {{name}}!</h2>
    <h3>Got something to say?</h3>

    <form class="blog-form">
        <label for="blog-title" id="blog-title">Title:</label>
        <input type="text" />
        <br>
        <label for="blog-content" id="blog-content">Content:</label>
        <input type="text" />
        <br>
        <button type="submit">Click</button>
    </form>
</div>

<div>
    {{#if dashboard.length}}
    <h2>Blogs:</h2>
    {{#each blogs as |blog|}}
    <div>
        <a href="api/blog/{{blog.id}}">{{blog.post_title}}</a>
    </div>
    {{/each}}
    {{/if}}
</div>

<script src="../public/js/dashboard.js"></script>